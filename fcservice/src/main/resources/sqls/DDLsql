#DDL(data definition language) 数据定义语句
#建库建表设置约束等

/***创建menagerie数据库***/
  CREATE DATABASE  IF NOT EXISTS  menagerie CHARACTER SET 'UTF8';

/***创建company公司表***/
  CREATE TABLE  IF NOT EXISTS `company` (
  `companycode` varchar(8) NOT NULL COMMENT '公司代码',
  `companyname` varchar(20) NOT NULL COMMENT '公司名称',
  `founddate` datetime DEFAULT NULL COMMENT '公司创建日期',
  `legalperson` varchar(20) NOT NULL COMMENT '公司法人',
  PRIMARY KEY (`companycode`)
  ) ENGINE=InnoDB DEFAULT CHARSET=UTF8 COMMENT='公司表';


/***在数据库menagerie下创建交易请求统计表trade_request_count***/
    CREATE TABLE IF NOT EXISTS  trade_request_count(
        `Channel` varchar(4) not null  comment '渠道',
        `ServiceCode`  varChar(20) NOT NULL COMMENT '服务码',
        `SceneCode` varchar(4) NOT NULL COMMENT '场景码',
        `RequestTime` timestamp NOT NULL  COMMENT '请求时间',
        UNIQUE (Channel,ServiceCode,SceneCode)
    )ENGINE=InnoDB DEFAULT CHARSET=UTF8 COMMENT='交易请求统计';

/***在数据库menagerie下创建交易请求统计表trade_request_rules***/
    CREATE TABLE IF NOT EXISTS  trade_request_rules(
    `Channel` varchar(4) not null  comment '渠道',
    `ServiceCode`  varChar(20) NOT NULL COMMENT '服务码',
    `SceneCode` varchar(4) NOT NULL COMMENT '场景码',
    `isCommon`  ENUM('Y','N') DEFAULT 'Y' COMMENT '是否通用规则非通用规则则不进行检查',
    `Require`   ENUM('0','1') DEFAULT '0' COMMENT '是否必输(0-否,1-是)',
    `FiledName`    VARCHAR(20) NOT NULL  COMMENT '字段名称',
    `FiledDes` VARCHAR(200) COMMENT '字段描述',
    `FiledType`   ENUM('0','1','2','3') DEFAULT '0' COMMENT '字段类型(0-字符串,1-数组,2-列表,3-对象)',
    `FiledLength` VARCHAR(200) NOT NULL COMMENT '字段长度',
    PRIMARY KEY (Channel,ServiceCode,SceneCode),
    unique (Channel,ServiceCode,SceneCode,FiledName,FiledType)
)ENGINE =InnoDB DEFAULT CHARACTER SET =UTF8 COMMENT '通用交易字段检查规则';